<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_bgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_default"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/default_profile_image"
        app:civ_border_color="@color/colorGradientDefault"
        app:civ_border_width="4dp" />

    <TextView
        android:id="@+id/editableImageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="click to change this image"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="italic"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/ic_menu_edit"
        android:ems="10"
        android:hint="displayName"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submitChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button_default"
        android:text="Submit changes"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button_default"
        android:text="cancel changes"
        android:textSize="18sp" />

</LinearLayout>